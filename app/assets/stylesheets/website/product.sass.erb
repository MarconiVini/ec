.product-list
  li
    list-style: none

.product
  float: left
  display: block
  padding: 4px
  margin-bottom: 20px
  background-color: #fff
  border: 1px solid #ddd
  border-radius: 4px
  min-height: 260px
  transition: box-shadow .2s ease-in-out
  img
    max-width: 100%
  &:hover
    -webkit-box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3)
    -moz-box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3)
    box-shadow: 2px 2px 6px 0px rgba(0,0,0,0.3)
  
  a
    &:hover
      text-decoration: none
  
  .details
    margin: 5px 0 0 0
    width: 100%

    .description-price
      float: left

      .from.strike
        font-size: 10px
        color: #999
        text-decoration: line-through
      .to
        font-size: 14px
        color: #56AD59

    .buttons
      float: right
      .add-cart
        background: url(<%= asset_path('products/white-add-cart.png') %>) #56AD59 no-repeat center  
        width: 36px
        height: 36px
        margin: 0
        padding: 0
        border: none
        float: right



  .name
    text-align: center
    padding: 2px
    margin: 3px 0
    width: 100%
    height: 40px
    line-height: 30px

    span
      display: inline-block
      vertical-align: middle
      line-height: normal

    